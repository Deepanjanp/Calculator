<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_orch"
    tools:context=".MainActivity">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_bg"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/calculator_top_design"
                android:id="@+id/firstsegment"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="20dp"
                    android:textSize="30sp"
                    android:textColor="@color/stopwatch_bg"
                    android:gravity="right"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/stopwatch_bg"
                    android:textSize="70sp"
                    android:layout_marginTop="30dp"

                    android:layout_marginBottom="60dp"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/firstsegment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bg"

                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="("

                            android:layout_margin="6dp"
                            android:textColor="@color/blue"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text=")"

                            android:layout_margin="6dp"
                            android:textColor="@color/blue"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="%"

                            android:layout_margin="6dp"
                            android:textColor="@color/blue"
                            android:textSize="30sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="/"

                            android:layout_margin="6dp"
                            android:textColor="@color/blue"
                            android:textSize="30sp"
                            android:background="@drawable/rounded_btn"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="7"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="8"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="9"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="*"

                            android:layout_margin="6dp"
                            android:textColor="@color/blue"
                            android:textSize="34sp"
                            android:background="@drawable/rounded_btn"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="4"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="5"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="6"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="-"

                            android:layout_margin="6dp"
                            android:textColor="@color/blue"
                            android:textSize="40sp"
                            android:background="@drawable/rounded_btn"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="1"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="2"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="3"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="+"

                            android:layout_margin="6dp"
                            android:textColor="@color/blue"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="AC"

                            android:layout_margin="6dp"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_ac_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="0"

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="."

                            android:layout_margin="6dp"
                            android:textColor="@color/stopwatch_bg"
                            android:textSize="40sp"
                            android:background="@drawable/rounded_btn"
                            />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:text="="

                            android:layout_margin="6dp"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:background="@drawable/rounded_equals_btn"
                            />


                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>


</RelativeLayout>